<main id="section">
  <nav id="breadcrumbs">
    {{breadcrumbs}}
  </nav>

  <div class="container sidebar">
    <aside>
    	{{#if section.description}}
      	<img src="{{section.description}}" />
    	{{/if}} 
    </aside>

    <article>
      <h1>{{section.name}}</h1>

      {{#if section.articles}}
        <ul>
          {{#each section.articles}}
          <li>
            <a href="{{url}}">{{title}}</a>
          </li>
          {{/each}}
        </ul>
      {{/if}}  
      
      {{#if section.sections}}   
        {{#each section.sections}}
          <div class="section">
            <h2>
              <a href="{{url}}">
                {{name}}
              </a>
            </h2>

            {{#if articles}}
              <div class="articles">
                  <ul>
                    {{#each articles}}
                      <li>
                        <a href="{{url}}">{{title}}</a>
                      </li>
                    {{/each}}
                  </ul>
              </div>
            {{/if}}
          </div>
        {{/each}}
      {{/if}} 
    </article>
  </div>
</main>

<button id="contact-us">
  Contact Us
  <a href="mailto:care@inc.com"></a>
</button>