<main id="section">
  <nav id="breadcrumbs">
    {{breadcrumbs}}
  </nav>

  <div class="container sidebar">
    <aside></aside>

    <article>
      <h1>{{section.name}}</h1>

      {{#if section.articles}}
        <ul>
          {{#each section.articles}}
          <li>
            <a href="{{url}}">{{title}}</a>
          </li>
          {{/each}}
        </ul>
      {{/if}}  
    </article>
  </div>
</main>

<button id="contact-us">
  Contact Us
  <a href="mailto:care@fastcompany.com"></a>
</button>

<script>
  var doc = new DOMParser().parseFromString('{{section.description}}', 'text/html');
  document.querySelector('aside').innerHTML = doc.documentElement.textContent;
</script>

